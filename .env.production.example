# Production environment variables - COPY THIS TO CLOUDFLARE PAGES SETTINGS
NODE_ENV=production

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# Replicate Configuration
NEXT_PUBLIC_REPLICATE_API_TOKEN=your_replicate_api_token_here

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here

# Stripe Webhook Secret (You'll need to get this from Stripe after setting up the webhook)
STRIPE_WEBHOOK_SECRET=

# Stripe Price IDs (Update these with your actual price IDs from Stripe)
NEXT_PUBLIC_STRIPE_BASIC_PRICE_ID_MONTHLY=
NEXT_PUBLIC_STRIPE_BASIC_PRICE_ID_YEARLY=
NEXT_PUBLIC_STRIPE_PRO_PRICE_ID_MONTHLY=
NEXT_PUBLIC_STRIPE_PRO_PRICE_ID_YEARLY=
NEXT_PUBLIC_STRIPE_PRICE_ID_BASIC=price_basic_plan_usd
NEXT_PUBLIC_STRIPE_PRICE_ID_PRO=price_pro_plan_usd